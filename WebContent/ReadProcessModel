<button type="button" onclick="loadXMLDoc()">
Retourner les noeuds du modèle des processus</button>

<p id="demo"></p>



<script>
function loadXMLDoc() {
  var xmlhttp = new XMLHttpRequest();
  xmlhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      myFunction(this);
    }
  };
  xmlhttp.open("GET", "ConfigurationPerformance.xml", true);
  xmlhttp.send();
}

function myFunction(xml) {
  
  
  /* */var x, i, xmlDoc, txt;
  xmlDoc = xml.responseXML;
  txt = "";
  x = xmlDoc.getElementsByTagName("Hi");

  for (i = 0; i< x.length; i++) {
    txt += x[i].childNodes[0].nodeValue + "<br>";
  }
  document.getElementById("demo").innerHTML = txt;
}
/* */
var xmlDoc = xml.responseXML;
    var x = xmlDoc.getElementsByTagName("Frequency")[0];
    var y = x.getAttributeNode("Total");
    var txt = y.nodeValue;
    document.getElementById("demo").innerHTML = txt;


</script>

</body>
